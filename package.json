{
  "name": "extendscript-bundlr",
  "version": "0.1.0",
  "description": "a tool for bundling Adobe ExtendScripts that use the `#include 'path/to/file'` statement",
  "main": "dist/index.js",
  "scripts": {
    "test-at": "node ./dist/index.js -i test/src/test.at.jsx -o out.jsx -r",
    "test-hash": "node ./dist/index.js -i test/src/test.hash.jsx -o out.jsx -r",
    "test-includepath": "node ./dist/index.js -i test/src/test.includepath.at.jsx -o out.jsx -r",
    "watch": "./node_modules/.bin/babel src -w -d dist/"
  },
  "keywords": ["Adobe", "ExtendScript", "automation"],
  "contributors": [{
    "name": "Fabian 'fabiantheblind' Mor√≥n Zirfas",
    "email": "fabian.moron.zirfas@gmail.com",
    "url": "http://fabianmoronzirfas.me"
  }],
  "license": "ISC",
  "bin": {
    "exsbundlr": "./dist/index.js"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.6.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "file-exists": "^1.0.0",
    "line-reader": "^0.4.0",
    "verbal-expressions": "^0.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiantheblind/extendscript-bundlr.git"
  },
  "bugs": {
    "url": "https://github.com/fabiantheblind/extendscript-bundlr/issues"
  }
}
